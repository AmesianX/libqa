{{# partial "content" }}
    <div class="container-fluid">
        <div class="jumbotron">
            <h1>LibQA</h1>
            <p>This example is a quick exercise to illustrate how the default, static navbar and fixed to top navbar work.
                It includes the responsive CSS and HTML, so it also adapts to your viewport and device.</p>
        </div>

        <br />
        <!--center-->
        <div class="col-sm-9">
            <div class="col-sm-12">
                <div class="index-thread-box first">
                    <h2><i class="glyphicon glyphicon-question-sign"></i> Q&amp;A</h2>
                    {{#each displayIndex.qaContents}}
                    <div class="index-thread-item">
                        <div class="title"><strong>{{{subString (htmlDelete title) 0 30}}}</strong></div>
                        <div class="pull-right">
                            {{#each keywords}}
                                {{{keywordBadge name}}}
                            {{/each}}
                        </div>
                        <div class="media">
                            <a class="pull-left" href="#">
                                <div class="user-profile">
                                    <img alt="avatar" class="profile-image" src="/resource/images/avatar.png" />
                                </div>
                            </a>
                            <div class="media-body">
                                {{{subString (htmlDelete contents) 0 200}}}
                                <span class="comments"><i class="glyphicon glyphicon-comment"></i> {{countOfReply}}</span>
                            </div>
                            <div class="pull-left"><span class="nickname">{{userNick}}</span></div>
                            <div class="pull-right">{{insertDate}}</div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
            <div class="col-sm-6">
                <h2><i class="fa fa-database"></i> Space</h2>
                {{#each displayIndex.spaces}}
                <div class="panel panel-default">
                    <div class="panel-heading"><strong>{{{subString (htmlDelete title) 0 30}}}</strong></div>
                    <div class="panel-body">{{{subString (htmlDelete description) 0 70}}}</div>
                </div>
                {{/each}}
           </div>
            <div class="col-sm-6">
                <h2><i class="glyphicon glyphicon-book"></i> Wiki</h2>
                {{#each displayIndex.wikies}}
                    <div class="panel panel-default">
                        <div class="panel-heading"><strong>{{{subString (htmlDelete title) 0 30}}}</strong></div>
                        <div class="panel-body">{{{subString (htmlDelete description) 0 70}}}</div>
                    </div>
                {{/each}}
            </div>
        </div>

        <div class="col-sm-3">
            <div class="index-thread-box first">
                <h2><i class="fa fa-weixin"></i> Feed</h2>
                {{#each displayIndex.feeds}}
                <div class="index-thread-item">
                    <div class="media">
                        <a class="pull-left" href="#">
                            <div class="user-profile">
                                <img alt="avatar" class="profile-image" src="{{userImage}}" />
                            </div>
                        </a>
                        <div class="media-body">
                            <a href="">{{{subString (htmlDelete content) 0 30}}}</a>
                            <span class="comments"><i class="glyphicon glyphicon-comment"></i> {{countOfReply}}</span>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
{{/partial}}

{{> template/base}}
